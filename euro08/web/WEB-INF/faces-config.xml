<?xml version="1.0" encoding="windows-1252"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
 <!-- To run with non Hibernate registry, uncomment the following bean
      and comment the Hibernate implementation bean above.
  <managed-bean>
    <managed-bean-name>TrainingEventRegistry</managed-bean-name>
    <managed-bean-class>com.jsfcompref.trainer.TrainingEventRegistryJava</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
 
 Hibernate based UserRegistry -->
 <managed-bean>
  <managed-bean-name>UserRegistry</managed-bean-name>
  <managed-bean-class>ch.bfh.euro08.jsf.beans.UserRegistry</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <!-- To run with non Hibernate registry, uncomment the following bean
      and comment the Hibernate implementation bean above.
  <managed-bean>
    <managed-bean-name>UserRegistry</managed-bean-name>
    <managed-bean-class>com.jsfcompref.trainer.UserRegistryJava</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
 -->
 <managed-bean>
  <managed-bean-name>user</managed-bean-name>
  <managed-bean-class>ch.bfh.euro08.hibernate.beans.User</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>login</managed-bean-name>
  <managed-bean-class>ch.bfh.euro08.jsf.beans.Login</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>TicketSystem</managed-bean-name>
  <managed-bean-class>ch.bfh.euro08.hibernate.TicketSystem</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>GameRegistry</managed-bean-name>
  <managed-bean-class>ch.bfh.euro08.jsf.beans.GameRegistry</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>register</managed-bean-name>
  <managed-bean-class>ch.bfh.euro08.jsf.beans.Register</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <from-view-id>/app/index.jsp</from-view-id>
  <navigation-case>
   <from-outcome>games</from-outcome>
   <to-view-id>/app/games.jsp</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/login.jsp</from-view-id>
  <navigation-case>
   <from-action>#{login.login}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/app/index.jsp</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-action>#{login.login}</from-action>
   <from-outcome>admin</from-outcome>
   <to-view-id>/admin/index.jsp</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-action>#{login.login}</from-action>
   <from-outcome>activationcode</from-outcome>
   <to-view-id>/activationcode.jsp</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>register</from-outcome>
   <to-view-id>/register.jsp</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <navigation-case>
   <from-outcome>login</from-outcome>
   <to-view-id>/login.jsp</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{login.logout}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/login.jsp</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>games</from-outcome>
   <to-view-id>/app/games.jsp</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/register.jsp</from-view-id>
  <navigation-case>
   <from-action>#{register.register}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/app/index.jsp</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <validator>
  <validator-id>futureDateValidate</validator-id>
  <validator-class>com.jsfcompref.trainer.util.FutureDateValidator</validator-class>
 </validator>
 <validator>
  <validator-id>pastDateValidate</validator-id>
  <validator-class>com.jsfcompref.trainer.util.PastDateValidator</validator-class>
 </validator>
 <validator>
  <validator-id>EmailValidator</validator-id>
  <validator-class>ch.bfh.euro08.jsf.beans.EmailValidator</validator-class>
 </validator>
 <!-- application settings -->
 <application>
  <locale-config>
   <default-locale>en</default-locale>
   <supported-locale>fr</supported-locale>
   <supported-locale>es</supported-locale>
  </locale-config>
 </application>
</faces-config>
